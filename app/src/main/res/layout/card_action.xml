<com.ksza.peggy.ui.widget.CardAction xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rectangular_selector_background"
    android:clickable="true">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/card_toolbar_separator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:paddingLeft="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cta_icon"
            android:layout_width="@dimen/card_title_icon_width"
            android:layout_height="@dimen/card_title_icon_height"
            android:layout_marginRight="16dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_forward_black_24dp" />

        <TextView
            android:id="@+id/cta_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </LinearLayout>
</com.ksza.peggy.ui.widget.CardAction>
